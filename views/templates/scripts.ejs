<script>
    $(function(){
        $('#saveNewProduct').click(function(){
            var title = $("#title").val()
            var desc = $("#desc").val()
            var price = $("#price").val()
            var data = {
                titulo: title,
                descricao: desc,
                preco:price
            }
            fetch("/product", {
                method:"post",
                data:data
            })
        })
    })
</script>